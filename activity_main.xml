<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- LinearLayout -->
        <TextView
            android:text="LinearLayout Exemplo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/linearLayoutExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEE"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <TextView android:text="Email" android:layout_marginBottom="4dp"/>
            <EditText android:hint="Digite seu email" android:layout_marginBottom="12dp"/>
            <Button android:text="Enviar" />
        </LinearLayout>

        <!-- FrameLayout -->
        <TextView
            android:text="FrameLayout Exemplo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:id="@+id/frameLayoutExample"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#CCC"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto por cima"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- RelativeLayout -->
        <TextView
            android:text="RelativeLayout Exemplo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:id="@+id/relativeLayoutExample"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#DDD"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/titleRelative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título Relative"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Botão"
                android:layout_below="@id/titleRelative"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- ConstraintLayout -->
        <TextView
            android:text="ConstraintLayout Exemplo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutExample"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#BBB"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/constraintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto no ConstraintLayout"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/constraintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Botão"
                app:layout_constraintTop_toBottomOf="@id/constraintText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- RecyclerView -->
        <TextView
            android:text="RecyclerView Exemplo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExample"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEE"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
